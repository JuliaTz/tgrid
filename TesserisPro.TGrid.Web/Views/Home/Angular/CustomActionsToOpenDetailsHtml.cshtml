<!-- Start the highlighter. -->

<pre class="brush: html">
    <div ng-app="TGrid"> 
        <div ng-controller="ctrl">
            <t-grid id="test-angular" provider="dataProvider" selectionMode="single" showDetailsOnSelection="false">
                 <script type="text/html">
                     <column data-g-width="75" data-g-views="mobile,desktop" data-g-member ="CompanyId">
                         <cell>
                            <span>{{item.CompanyId}}</span>
                            <a href ng-mouseover="showDetailForCell(0); $event.stopPropagation();">...</a> 
                        </cell>
                         <celldetail>
                            <div>
                                <div>This is a sample of cell details: </div>
                                <div style="color: #444;">{{item.detail_Company}}</div>
                            </div>
                        </celldetail>
                    </column>
                    <column data-g-width="150" data-g-views="mobile,desktop" data-g-member ="Country">
                    </column>
                    <column data-g-width="100" data-g-views="mobile,desktop" data-g-member ="City">
                    </column>
                    <column data-g-width="100" data-g-views="mobile,desktop" data-g-member ="Street">
                    </column>
                     <column data-g-width="150" data-g-views="mobile,desktop">
                        <header>
                            <span>Details for row</span>
                        </header>
                         <cell>
                            <button style="color: #444;" ng-click="showDetailForCell(-1); $event.stopPropagation();">Details</button>
                        </cell>
                    </column>
                     <details>
                        <div>
                            <div>This is a sample of row details: </div>
                            <div style="color: #444;">{{item.detail}}</div>                    
                            <div><span>Company detail : </span><span style="color: #444;">{{item.detail_Company}} </span></div>         
                        </div>
                    </details>
                </script>
            </t-grid>
        </div>
    </div>
</pre>

<script type="text/javascript">
    SyntaxHighlighter.highlight();
</script>