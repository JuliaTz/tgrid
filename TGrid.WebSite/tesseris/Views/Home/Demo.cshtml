@{
    ViewBag.Title = "Grid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>  
    .sf_colsOut.sf_1col_1_100 {
        margin-top: 40px;
    }
</style>

<script src="@Url.Content("~/ViewModels/DemoViewModel.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () { ko.applyBindings(new DemoViewModel()) });    
</script>
<div id="list">
    <ul data-bind="foreach: demos">
        <li>
            <a data-bind="text: title, click: $root.openDemo, css: { active: url == $root.currentDemo() }"></a>
        </li>
    </ul>
</div>
<div style="display:inline-block; margin-left: 270px;">
    <iframe name="main-frame" id="main-frame" data-bind="attr: { src: currentDemoUrl }"></iframe>
    <div id="ace-code">
        <header style="width: 100%; height: 28px;">           
                <ul class="editor-menu" data-bind="foreach: codes">
                    <li>
                        <a data-bind="text: name, click: $root.showCode, css: { active: name == $root.currentCodeName() }"></a>
                    </li>                   
                </ul>           
        </header>      
        <div class="editor-container">
            <div id="html">
            </div>
            <div id="css">
            </div>
            <div id="js">
            </div>
@*            <div class="content-editor">                
                <div id="editor-html">
                    @{Html.RenderPartial("SimpleGridWithoutPagingHtml"); }
                </div>
            </div>
            <div class="style-editor">
                <div id="editor-css">
                    @{Html.RenderPartial("StyleCss"); }
                </div>
            </div>
            <div class="script-editor">
                <div id="editor-js" >
                    @{Html.RenderPartial("ScriptJs"); }
                </div>
            </div>*@
        </div> 
    </div>
</div>



        